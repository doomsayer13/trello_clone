<div class="navbar navbar-default navbar-fixed-top" role="navigation">
	<div>
		<div class="container navbar-header">
			<a class="container navbar-brand" href="#">MarTrello</a>
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				<p class="navbar-text">
					Signed in as <%= current_user.username %>
					<span>
						<img class="img-thumbnail" src="<%= current_user.avatar_url %>">
					</span>
				</p>				
			</ul>
			<ul class="container nav navbar-nav navbar-right">
			 	<li class="container">
			   	<form action="<%= session_url %>" method="post">
						<button type="submit" class="btn btn-danger navbar-btn">
						<input type="hidden" name="_method" value="delete">
							<i class="icon-off"></i>
						</button>
					</form>
				</li>
			</ul>
		</div>
	</div>
</div>

<div class="col-md-12" id="content">
</div>

<div id="footer">
	<div class="container">
		<p class="text-muted credit">MarTrello by <a href="http://www.marceloguindon.com">Marcelo Guindon</a></p>
	</div>	
</div>
	
<script type="application/json" id="bootstrapped-data">
	<%= render "data.json", :boards => @boards %>
</script>

<script type="application/javascript">
	$(function(){
		var user_id, div, data;
		
		user_id = $('p').attr('data-id');
		
		div = $('<div></div>');
		div.html($('#bootstrapped-data').text());
		data = JSON.parse(div.text());
		
		window.TrelloClone.initialize($("#content"), user_id, data);
	});
</script>