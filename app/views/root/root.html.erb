<div class="navbar navbar-default navbar-fixed-top" role="navigation">
	<div class="container">
		<div class="navbar-header">
			<a class="navbar-brand" href="#">TrelloClone</a>
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				<li><a href="#">Home</a></li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<p class="navbar-text" data-id="<%= current_user.id %>">
					Logged in as: <%= current_user.username %>
				</p>
				<li>
			    <form action="<%= session_url %>" method="post">
						<button type="submit" class="btn btn-default navbar-btn">
						<input type="hidden" name="_method" value="delete">
							Logout
						</button>
					</form>
				</li>
			</ul>
		</div>
	</div>
</div>

<div class="container" id="content">
</div>

<script type="application/json" id="bootstrapped-data">
	<%= render "data.json", :boards => @boards %>
</script>

<script type="application/javascript">
	$(function(){
		var user_id, div, data;
		
		user_id = $('p').attr('data-id');
		
		div = $('<div></div>');
		div.html($('#bootstrapped-data').text());
		data = JSON.parse(div.text());
		
		window.TrelloClone.initialize($("#content"), user_id, data);
	});
</script>